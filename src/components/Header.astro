---
import Button from "../components/Button.astro";
---
<div class="flex flex-row">
    <!-- LOGO OG MENUPUNKTER -->
    <div x-data="{ showmenu: false }" class="p-4 pt-8 fixed lg:fixed w-full bg-beige-one z-50">
      <div id="navbar" class="flex flex-row md:justify-between items-center">
        <div class="flex flex-row items-center md:gap-10">
          <div id="logo">
            <a href="/#" class="text-xl md:pl-6 pl-2">plastic change</a>
          </div>
          <nav id="desktopmenu" class="hidden lg:flex gap-4 pl-[440px] text-menu">
            <a href="#sektion-1" class="hover:text-burned-orange">Plastikforurening</a>
            <p>/</p>
            <a href="#sektion-2" class="hover:text-burned-orange">Om Plastic Change</a>
            <p>/</p>
            <a href="#sektion-3" class="hover:text-burned-orange">Dit bidrag</a>
            <p>/</p>
            <a href="#sektion-4" class="hover:text-burned-orange">Nyhedsbrev</a>
            <p>/</p>
            <a href="#sektion-5" class="hover:text-burned-orange">Shop</a>
          </nav>
        </div>
  
        <!-- BURGERMENU OG CTA KNAP -->
        <div class="flex items-center absolute top-0 right-4 lg:right-0 w-full lg:w-auto">
          <!-- BURGERMENU -->
          <button id="burgermenu" class="lg:hidden text-black flex flex-row ml-auto" x-on:click="showmenu = !showmenu">
            <!-- Burger Icon (3 lines) -->
            <svg x-show="!showmenu" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="black" class="size-9 transition-transform duration-300">
              <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5"></path>
            </svg>
          </button>
  
          <!-- CTA KNAP, skjul i mobilmenu-->
          <div class="md:flex justify-center drop-shadow-xl hover:drop-shadow-none" :class="{ 'hidden': showmenu }">
            <a href="#sektion-3">
              <Button class="text-xl">STØT NU</Button>
            </a>
          </div>
        </div>
      </div>
  
      <!-- MOBILMENU -->
      <nav id="mobilmenu" class="pb-20 w-full fixed top-0 left-0 flex flex-col content-center text-black text-menu z-80 bg-beige-one" x-show="showmenu" x-transition>
        <!-- Lukke ikon (X) i hjørnet -->
        <button class="absolute top-8 right-4" x-on:click="showmenu = false">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="black" class="size-9">
            <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12"></path>
          </svg>
        </button>
  
        <ul class="mt-16">
          <li class="py-6 pl-16 text-black hover:text-burned-orange"><a href="/#">Plastikforurening</a></li>
          <li class="py-6 pl-16 text-black hover:text-burned-orange"><a href="/#">Om Plastic Change</a></li>
          <li class="py-6 pl-16 text-black hover:text-burned-orange"><a href="/#">Dit bidrag</a></li>
          <li class="py-6 pl-16 text-black hover:text-burned-orange"><a href="/#">Nyhedsbrev</a></li>
          <li class="py-6 pl-16 text-black hover:text-burned-orange"><a href="/#">Shop</a></li>
        </ul>
      </nav>
    </div>
  </div>
  