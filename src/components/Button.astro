---
// Henter parametrene fra Astro.props
const { variant= "primary", size = "medium" } = Astro.props; 

//Definer den styling (Tailwind classes, der gør sig gældende for alle knapper
const buttonStyling = "text-black"; 

//Definer den styling (Tailwind classes), der gør sig gældende for de forskellige varianter 
const variantClasses = {
   "secondary": "inline-block place-content-center h-10 bg-yellow-one hover:bg-bright-yellow",
    "primary": "inline-block grid place-content-center h-10 bg-yellow-one hover:bg-bright-yellow",
    "hero_cta": "text-soft-white underline underline-offset-4 md:text-3xl"

};

//Definer den styling (Tailwind classes), der gør sig gældende for de forskellige størrelser.
const sizeClasses = {
    "large": "p-6",
    "medium": "px-8 py-8",
    "small": "p-2",
    "none": "p-0 pb-2"
};
---
<!--Sæt classes for den pågældende knap sammen ved hjælp af Astros class:list -->
<button class:list={[buttonStyling, variantClasses[variant], sizeClasses[size]]}><slot /></button>