---
// Henter parametrene fra Astro.props

const { variant= "primary", size = "medium" } = Astro.props; 

// Definer den styling (tailwind classes, der gør sig gældende for alle links)
const buttonStyling = ""; 

// Definer den styling (Tailwind classes), der gør sig gældende for de forskellige varianter
const variantClasses = {

    // "main": " w-40 h-10 bg-transparent border border-[var(--accent-color-300)] text-black hover:bg-yellow px-2 py-2 ",

   

    "mobilmain": "bg-yellow-one hover:bg-bright-yellow hover:shadow-2xl transition-shadow duration-300 py-1 px-5",
    "mobilmain2": "bg-yellow-one hover:bg-bright-yellow py-1 px-5",
    "mobilmain3": "bg-transparent text-soft-white",
    "mobilprimary": "bg-yellow-one hover:bg-bright-yellow py-1 px-9 w-55",
    "mobilsecondary": "text-black bg-yellow-one hover:bg-bright-yellow py-1 px-10 w-80",
    "mobilsecondary2": "bg-yellow-one border border-black hover:bg-bright-yellow py-1 px-3",

};

// Definer den styling (Tailwind classes), der gør sig gælende for de forskellige størrelser
const sizeClasses = {
     "xlarge": "text-2xl",
    "large": "p-50 pulsate-bck ",
    "medium": "p-8 pulsate-bck ",
    "small": "p-2 pulsate-bck ",

    
};
---
<button class:list={[buttonStyling, variantClasses[variant], sizeClasses[size]]}><slot /></button>



