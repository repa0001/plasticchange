---
import MainLayout from "../layouts/MainLayout.astro";
import Button from '../components/Button.astro';
import Mobilbutton from '../components/Mobilbutton.astro';
import Link from '../components/Link.astro';
import { Image } from 'astro:assets';
import facebook from "../assets/images/facebook.svg";
import insta from "../assets/images/insta.svg";
import x from "../assets/images/x.svg";
import linkedin from "../assets/images/linkedin.svg";
import youtube from "../assets/images/youtube.svg";

---
    <article class="">
		  
        <section class="flex justify-center  bg-beige-one"> <!-- Centrering af hele grid'et -->

			
            <div class="grid grid-cols-1 md:flex md:items-start justify-center max-w-4xl w-full p-4 md:gap-20 mt-24"> <!-- Justering af startposition -->

                <!-- Første kolonne -->
                <div class="flex flex-col items-start w-full md:w-1/2 mb-8 md:mb-0">
                  <p class="mb-2 md:text-4xl text-xl font-bold pt-18 text-almost-black">Følg vores arbejde</p> <!-- Flyttet h2 her -->
            
                    <section class=" md:text-left w-full"> 
                        <div class="justify-start leading-relaxed font-thin mt-2">
                            <p>På de sociale medier opdaterer vi løbende om vores indsats. Følg os og spred budskabet om #singleusesucks</p>
                        </div>
                    </section>                
                </div>

                <!-- Anden kolonne -->
                <div class="grid grid-cols-5 justify-center gap-4 md:justify-end lg:justify-end md:mt-24">
                    <Image class="w-16 h-auto lg:w-20" src={facebook} alt="mobilskrald"/>
                    <Image class="w-16 h-auto lg:w-20" src={insta} alt="mobilskrald"/>
                    <Image class="w-16 h-auto lg:w-20" src={x} alt="mobilskrald"/>
                    <Image class="w-16 h-auto lg:w-2" src={linkedin} alt="mobilskrald"/>
                    <Image class="w-16.1 h-auto lg:w-40" src={youtube} alt="mobilskrald"/>
                    <p class="">#singleusesucks</p>
                </div>

            </div>

        </section>
      
    </article>
